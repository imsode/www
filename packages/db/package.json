{
	"name": "@repo/db",
	"exports": {
		"./client": {
			"types": "./src/client.ts",
			"default": "./dist/src/client.js"
		},
		"./schema": {
			"types": "./src/schema.ts",
			"default": "./dist/src/schema.js"
		}
	},
	"scripts": {
		"build": "tsc",
		"db:push": "drizzle-kit push",
		"db:seed": "tsx --env-file=.env src/seed.ts",
		"db:seed:clean": "tsx --env-file=.env src/seed.ts --clean"
	},
	"dependencies": {
		"drizzle-orm": "^0.44.7",
		"postgres": "^3.4.7"
	},
	"devDependencies": {
		"@types/node": "^24.10.1",
		"drizzle-kit": "^0.31.7",
		"tsx": "^4.20.6"
	}
}
